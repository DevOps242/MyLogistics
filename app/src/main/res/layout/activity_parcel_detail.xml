<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParcelDetailActivity">


    <TextView
        android:id="@+id/parcelViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parcel Details"
        android:layout_marginVertical="15dp"
        android:textSize="@dimen/pageTitle"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:id="@+id/parcelDetailCardScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parcelViewTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        tools:ignore="ScrollViewCount"
        android:layout_marginVertical="10dp"
        android:paddingVertical="10dp"
        >

    <androidx.cardview.widget.CardView
        android:id="@+id/parcelDetailCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/brown_300"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="13dp"
        >

        <LinearLayout
            android:id="@+id/parcelItemInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/parcelItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcel Details"
                android:layout_marginVertical="7dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemTrackingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracking #: "
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemVendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor: "
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemWarehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warehouse #: "
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <TextView
                android:id="@+id/parcelItemFragile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragile: "
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <TextView
                android:id="@+id/parcelItemPaymentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcel Payment"
                android:layout_marginVertical="15dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


            <TextView
                android:id="@+id/parcelItemPaymentWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight: "
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemPaymentInvoiceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice: "
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemPaymentInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance: $"
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemPaymentServiceFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Fee: $"
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemPaymentSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: $"
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemPaymentTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax: $"
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/parcelItemPaymentTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: $"
                android:textSize="16sp"
                android:layout_marginVertical="7dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </ScrollView>

