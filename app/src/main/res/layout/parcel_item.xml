<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <!--Parcel Item Card View-->
        <androidx.cardview.widget.CardView
            android:id="@+id/parcelItemCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_100"
            app:cardCornerRadius="10dp"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/parcelItemDescription"
                    tools:text="Honda Civic Car Starter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="1dp"
                    android:layout_marginHorizontal="30dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/parcelItemTrackingNumber"
                    android:text="Tracking #: 434242RFADSFA23FA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="1dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_800"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/parcelItemVendor"
                    android:text="Vendor: Amazon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="1dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_800"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/parcelItemWeight"
                    android:text="Weight: 9.65 lbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="1dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_800"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/parcelItemButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="View Details"
                    android:textSize="11sp"
                    android:layout_margin="0dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginVertical="2dp"
                    android:paddingHorizontal="4dp"
                    app:cardCornerRadius="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="2dp"
                        android:paddingVertical="4dp"
                        >
                        <TextView
                            android:id="@+id/parcelItemLocationText"
                            android:text="Location:"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="1dp"
                            android:textSize="14sp"
                            android:textColor="@color/gray_800"
                            />
                        <TextView
                            android:id="@+id/parcelItemLocationValue"
                            android:text="Warehouse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="0dp"
                            android:layout_marginVertical="1dp"
                            android:textSize="14sp"
                            android:textColor="@color/gray_800"
                            android:layout_gravity="start"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>